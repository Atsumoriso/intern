<?xml version="1.0"?>
<layout version="0.1.0">

    <blog_post_view>
        <reference name="content">
            <block type="blog/posts" name="blog_view_one" template="blog/view/one.phtml"/>
        </reference>
    </blog_post_view>

    <blog_post_list>
        <reference name="head">
            <action method="setTitle" translate="value"><value>Posts list</value></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action><!--template for columns number-->
        </reference>
        <reference name="content">
            <block type="blog/posts" name="blog_list" template="blog/view/list.phtml"/>
        </reference>
    </blog_post_list>

    <blog_post_add>
        <reference name="head">
            <action method="addJs"><script>validate.js</script></action>
            <action method="setTitle" translate="value"><value>Add new post</value></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action><!--template for columns number-->
        </reference>
        <reference name="content">
            <block type="blog/posts" name="blog_add" template="blog/view/add_edit.phtml"/>
        </reference>
    </blog_post_add>


    <blog_post_edit>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action><!--template for columns number-->
        </reference>
        <reference name="content">
            <block type="blog/posts" name="blog_add" template="blog/view/add_edit.phtml"/>
        </reference>
    </blog_post_edit>

</layout>