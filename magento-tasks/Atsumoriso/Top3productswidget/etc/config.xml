<?xml version="1.0"?>
<config>
    <modules>
        <Atsumoriso_Top3productswidget>
            <version>1.0.0</version>
        </Atsumoriso_Top3productswidget>
    </modules>
    <global>
        <blocks>
            <atsumoriso_top3productswidget>
                <class>Atsumoriso_Top3productswidget_Block</class>
            </atsumoriso_top3productswidget>
        </blocks>
        <models>
            <atsumoriso_top3productswidget>
                <class>Atsumoriso_Top3productswidget_Model</class>
            </atsumoriso_top3productswidget>
       </models>

        <helpers>
            <atsumoriso_top3productswidget>
                <class>Atsumoriso_Top3productswidget_Helper</class>
            </atsumoriso_top3productswidget>
        </helpers>

        <resources>
            <atsumoriso_top3productswidget_setup> <!--sql -data install scripts folder name to read from-->
                <setup>
                    <module>Atsumoriso_Top3productswidget</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </atsumoriso_top3productswidget_setup>
        </resources>


    </global>

    <frontend>
        <layout>
            <updates>
                <atsumoriso_top3productswidget>
                    <file>widget.xml</file>
                </atsumoriso_top3productswidget>
            </updates>
        </layout>
    </frontend>


    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <atsumoriso_top3productswidget before="Mage_Adminhtml">Atsumoriso_Top3productswidget_Adminhtml</atsumoriso_top3productswidget>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>



    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <education>
                                            <title>Education</title>
                                        </education>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <adminhtml>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <atsumoriso_top3productswidget>
                        <!-- Add column to catalog product grid -->
                        <class>atsumoriso_top3productswidget/adminhtml_observer</class>
                        <method>onBlockHtmlBefore</method>
                    </atsumoriso_top3productswidget>
                </observers>
            </core_block_abstract_to_html_before>

            <catalog_product_collection_load_before>
                <observers>
                    <atsumoriso_top3productswidget>
                        <!-- Add column to product list -->
                        <class>atsumoriso_top3productswidget/adminhtml_observer</class>
                        <method>onEavLoadBefore</method>
                    </atsumoriso_top3productswidget>
                </observers>
            </catalog_product_collection_load_before>
        </events>

    </adminhtml>

</config>